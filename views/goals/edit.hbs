<h3>Edit goal</h3>
<div class="row">
    <form action="/goals/{{goal._id}}" method="POST" class="col s12">
        <input type="hidden" name="_method" value="POST" />
        <div class="row">
            <div class="input-field">
                <input
                    type="text"
                    id="title"
                    name="title"
                    value="{{goal.title}}"
                />
                <label for="title">Title</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input
                    type="date"
                    id="date"
                    name="date"
                    value="{{goal.date}}"
                />
                <label for="date">Date</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input
                    type="date"
                    id="targetDate"
                    name="targetDate"
                    value="{{goal.targetDate}}"
                />
                <label for="targetDate">Target Date</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select id="category" name="category">
                    {{#select goal.category}}
                        <option value="Health" selected>Health</option>
                        <option value="Nutrition">Nutrition</option>
                        <option value="Fitness">Fitness</option>
                    {{/select}}
                </select>
                <label for="category">Category</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select id="status" name="status">
                    {{#select goal.status}}
                        <option value="public" selected>Public</option>
                        <option value="private">Private</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Tell Us Your goal:</h5>
                <textarea id="body" name="body">{{goal.body}}</textarea>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn" />
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>